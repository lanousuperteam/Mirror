<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/goodsfragment_item_imageview"
        android:layout_width="540px"
        android:layout_height="595px"
        android:layout_marginLeft="22px"
        android:src="@mipmap/ic_launcher"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="540px"
        android:layout_height="238px"
        android:layout_marginLeft="22px">

        <TextView
            android:id="@+id/item_recyclerview_model"
            android:layout_marginTop="50px"
            android:layout_marginLeft="32px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEE CONCEPT"
            android:textSize="30px"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_recyclerview_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法国巴黎"
            android:textColor="#333"
            android:textSize="24px"
            android:layout_below="@id/item_recyclerview_model"
            android:layout_marginLeft="32px"
            android:layout_marginTop="16px"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="30px"
            android:src="@mipmap/icon_register_line"
            android:layout_below="@id/item_recyclerview_address" />


    </com.zhy.autolayout.AutoRelativeLayout>

    


</com.zhy.autolayout.AutoLinearLayout>