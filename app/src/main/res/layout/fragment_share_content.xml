<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="640px"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_special_topic_frame"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150px"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/sharecontentfragment_tag_tv"
            android:layout_marginTop="66px"
            android:layout_marginLeft="62px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="22px" />
        <TextView
            android:id="@+id/sharecontentfragment_title_tv"
            android:layout_marginTop="22px"
            android:layout_marginLeft="62px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34px"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/sharecontentfragment_content_tv"
            android:layout_marginTop="22px"
            android:layout_marginLeft="62px"
            android:layout_marginRight="62px"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="20px"
            android:layout_marginBottom="66px"/>


    </LinearLayout>




</com.zhy.autolayout.AutoRelativeLayout>