<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFragmentTopBackground">
    <ImageView
        android:id="@+id/topfragment_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_logo_mirror"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/topfragment_imageview_marginleft"
        android:layout_marginBottom="@dimen/topfragment_imageview_marginbottom"/>

    <TextView
        android:id="@+id/topfragment_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/topfragment_login_text"
        android:text="@string/topfragment_login_text"
        android:textColor="@color/colorText"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/topfragment_login_marginright"
        android:layout_marginBottom="@dimen/topfragment_login_marginbottom"/>

</com.zhy.autolayout.AutoRelativeLayout>