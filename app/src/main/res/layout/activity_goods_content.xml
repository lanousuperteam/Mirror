<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/activity_goods_content_background_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_goods_content_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <RelativeLayout

        android:id="@+id/activity_goods_content_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

       <ImageView
           android:id="@+id/activity_goods_content_return_iv"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@mipmap/btn_return"
           android:layout_marginLeft="@dimen/activity_goods_content_return_btn_margin_left"/>
        <TextView
            android:id="@+id/activity_goods_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_wear"
            android:layout_toRightOf="@id/activity_goods_content_return_iv"
            android:layout_marginLeft="@dimen/activity_goods_content_wear_tv_margin_left"
            android:text="@string/activity_goods_content_wear"
            android:textColor="@color/colorText"
            android:gravity="center"
           />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_buy"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_goods_content_buy_margin_right"
            android:layout_marginBottom="@dimen/activity_goods_content_buy_margin_bottom"/>

    </RelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>
