<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.5"
    android:background="@color/goodsfragment_item_price_textcolor"
    android:id="@+id/item_goodsfragment_content_head_relativelayout"

    >
    <ImageView
        android:id="@+id/item_goodsfragment_content_head_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_share"
        android:layout_alignRight="@+id/item_goodsfragment_content_head_frame"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_share_margin_top"/>

    <ImageView
        android:id="@+id/item_goodsfragment_content_head_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_goods_frame"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_frame_margin_top"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/item_goodsfragment_content_head_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="@dimen/item_goodsfragment_content_head_goods_name_text"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_goods_name_margin_top"
        />
    <ImageView
        android:id="@+id/item_goodsfragment_content_head_line_top"
        android:layout_width="@dimen/item_goodsfragment_content_head_line_top_width"
        android:layout_height="@dimen/item_goodsfragment_content_head_line_top_height"
        android:background="@mipmap/icon_title_line"
        android:layout_below="@id/item_goodsfragment_content_head_goods_name"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_line_top_margin_top"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/item_goodsfragment_content_head_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="@dimen/item_goodsfragment_content_head_brand_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_goodsfragment_content_head_line_top"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_brand_margin_top"/>

    <ImageView
        android:id="@+id/item_goodsfragment_content_head_line_bottom"
        android:layout_width="@dimen/item_goodsfragment_content_head_line_bottom_width"
        android:layout_height="@dimen/item_goodsfragment_content_head_line_bottom_height"
        android:background="@mipmap/icon_title_line"
        android:layout_below="@id/item_goodsfragment_content_head_brand"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_line_bottom_margin_top"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/item_goodsfragment_content_head_info_des"
        android:layout_width="@dimen/item_goodsfragment_content_head_info_width"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="@dimen/item_goodsfragment_content_head_info_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_goodsfragment_content_head_line_bottom"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_info_margin_top"/>
    <TextView
        android:id="@+id/item_goodsfragment_content_head_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/item_goodsfragment_content_head_price_text"
        android:textColor="@color/colorText"
        android:drawableLeft="@mipmap/icon_money"
        android:textStyle="bold"
        android:layout_below="@id/item_goodsfragment_content_head_info_des"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_price_margin_top"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/item_goodsfragment_content_head_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_goodsfragment_content_head_test_scroll_text"
        android:textColor="@color/colorText"
        android:textSize="@dimen/item_goodsfragment_content_head_scroll_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/item_goodsfragment_content_head_frame"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_scroll_margin_top"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_goods_down"
        android:layout_below="@id/item_goodsfragment_content_head_scroll"
        android:layout_marginTop="@dimen/item_goodsfragment_content_head_down_margin_top"
        />

</RelativeLayout>
