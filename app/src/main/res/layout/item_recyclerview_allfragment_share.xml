<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/allfragment_share_auto_marginleft"
        android:orientation="vertical"
        android:background="@color/colorText">

        <ImageView
            android:id="@+id/allfragment_item_share_imageview"
            android:layout_width="@dimen/allfragment_share_iv_width"
            android:layout_height="@dimen/allfragment_item_share_imageview_height"
            android:src="@mipmap/ic_launcher" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/allfragment_item_auto_height"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/allfragment_item_iv_marginleft"
                android:layout_marginTop="@dimen/allfragment_item_iv_margintop"
                android:src="@mipmap/icon_black_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/allfragment_item_share_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/allfragment_item_share_name_margintop"
                    android:layout_marginLeft="@dimen/allfragment_item_share_name_marginleft"
                    android:text=""
                    android:textColor="@color/colorItemBackground"
                    android:textSize="@dimen/allfragment_item_share_name_text" />

            </LinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</LinearLayout>