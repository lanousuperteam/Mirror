<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background">


    <ListView
        android:divider="@null"
        android:id="@+id/popwindow_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
    <TextView
        android:id="@+id/popupwindow_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/popwindow_item_marginstart"
        android:layout_marginTop="@dimen/popwindow_item_margintop"
        android:text="返回首页"
        android:textColor="@color/popwindow_item_textview_color"
        android:textSize="@dimen/popwindow_item_textsize" />
    <TextView
        android:id="@+id/popupwindow_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/popwindow_item_marginstart"
        android:layout_marginTop="78px"
        android:text="退出"
        android:textColor="@color/popwindow_item_textview_color"
        android:textSize="@dimen/popwindow_item_textsize" />

</LinearLayout>