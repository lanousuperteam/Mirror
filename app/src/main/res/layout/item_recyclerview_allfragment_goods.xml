<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="833px"
        android:layout_marginLeft="@dimen/goodsfragment_item_linearlayout_maginleft"
        android:background="@color/goodsfragment_item_linearlayout_background"
        android:orientation="vertical">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/allfragment_item_goods_imageview"
            android:layout_width="@dimen/goodsfragment_item_imageview_width"
            android:layout_height="@dimen/goodsfragment_item_imageview_heitht"
            android:src="@mipmap/ic_launcher" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="@dimen/goodsfragment_item_relativelayout_width"
            android:layout_height="@dimen/goodsfragment_item_relativelayout_height"
            android:background="#fff"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/allfragment_item_goods_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/goodsfragment_item_model_marginleft"
                android:layout_marginTop="@dimen/goodsfragment_item_model_margintop"
                android:text="SEE CONCEPT"
                android:textColor="@color/goodsfragment_item_model_textcolor"
                android:textSize="@dimen/goodsfragment_item_model_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/allfragment_item_goods_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allfragment_item_goods_model"
                android:layout_marginLeft="@dimen/goodsfragment_item_address_marginleft"
                android:layout_marginTop="@dimen/goodsfragment_item_address_margintop"
                android:text="法国巴黎"
                android:textColor="@color/goodsfragment_item_address_textcolor"
                android:textSize="@dimen/goodsfragment_item_address_textsize" />

            <ImageView
                android:id="@+id/allfragment_item_goods_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allfragment_item_goods_address"
                android:layout_marginLeft="@dimen/goodsfragment_item_line_marginleft"
                android:layout_marginRight="@dimen/goodsfragment_item_line_marginright"
                android:layout_marginTop="@dimen/goodsfragment_item_line_margintop"
                android:src="@mipmap/icon_register_line" />

            <TextView
                android:id="@+id/allfragment_item_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/allfragment_item_goods_line"
                android:layout_marginLeft="@dimen/goodsfragment_item_name_marginleft"
                android:layout_marginTop="@dimen/goodsfragment_item_name_margintop"
                android:text="草莓紅色圓框閱讀鏡"
                android:textColor="@color/goodsfragment_item_name_textcolor"
                android:textSize="@dimen/goodsfragment_item_name_textsize" />

            <TextView
                android:id="@+id/allfragment_item_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/goodsfragment_item_price_marginright"
                android:layout_marginTop="@dimen/goodsfragment_item_price_margintop"
                android:text="¥450"
                android:textColor="@color/goodsfragment_item_price_textcolor"
                android:textSize="@dimen/goodsfragment_item_price_textsize"
                android:textStyle="bold" />


        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>