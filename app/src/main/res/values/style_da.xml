<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--设置登录界面和注册账号界面所有输入框的限制-->
    <style name="LoginAndCreateAccountEditText">
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">20</item>
    </style>

    <!--我的所有地址界面的添加地址的文字样式 -->
    <style name="MyAddressFontType">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- 我的所有地址界面的添加地址的左右边距-->
    <style name="MyAddressPageMargin">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">#f1f1f1</item>
    </style>

    <!-- 添加地址页TextView 字体样式-->
    <style name="AddAddressFontTypeName">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 添加地址页其他TextView 的字体样式-->
    <style name="AddAddressFontTypeOther">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#333</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 添加地址页 EditText 格式姓名与联络号码-->
    <style name="AddAddressEditTextTypeNameAndTel">
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <!-- 添加地址页 EditText 添加收货地址-->
    <style name="AddAddressEditTextType">
        <item name="android:maxLines">5</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333</item>
    </style>

    <!-- 添加地址页 添加地址按钮-->
    <style name="AddAddressButtonType">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@mipmap/btn_login_normal</item>
    </style>

    <!-- 所有地址页 显示地址的 listview-->
    <style name="AllAddressSwipemenuListviewStyle">
        <item name="android:dividerHeight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- 支付的popupwindows-->
    <style name="PayPopupwindowsSelectWechat">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <!-- 支付的popupwindows-->
    <style name="PayPopupwindowsSelectAliPay">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!--  支付的popupwindows 的微信,支付宝按钮-->
    <style name="PayPopupwindowsSelectPayBtn">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
    </style>


</resources>