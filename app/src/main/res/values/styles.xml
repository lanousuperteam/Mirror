<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/into</item>
    </style>

    <!-- 订单管理-->
    <!-- 订单页style布局的左右间距-->
    <style name="IndentDatailsPageMargin">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="AddAddressMargin">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">#f1f1f1</item>
    </style>


    <!-- 订单页第一个文本编辑框的文字 style-->
    <style name="IndentDatailsPageFontFirstEditText">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <!-- 订单页第一个文本编辑框的文字 style-->
    <style name="IndentDatailsPageFontFirstTextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <!-- 订单页标题的文字style-->
    <style name="IndentDatailsPageFontTitle">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 订单页商品名称的文字 style-->
    <style name="IndentDatailsPageProductName">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 订单页标题的文字style-->
    <style name="IndentDatailsPageProductInformation">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!-- 订单页钱的上下距离-->
    <style name="IndentDatailsPageMoneyMargin">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- 订单页钱的 style-->
    <style name="IndentDatailsPageMoneyStyle">
        <item name="android:textColor">#ff5aab</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>



    <!-- 订单页下单按钮的 style-->
    <style name="IndentDatailsPageOrderBottom">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

</resources>
