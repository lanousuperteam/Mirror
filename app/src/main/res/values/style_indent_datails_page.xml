<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 订单页style布局的左右间距-->
    <style name="IndentDatailsPageMargin">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!-- 订单页第一个文本编辑框的文字 style-->
    <style name="IndentDatailsPageFontFirstEditText">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#333</item>
    </style>

    <!-- 订单页标题的文字style-->
    <style name="IndentDatailsPageFontTitle">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- 订单页商品名称的文字 style-->
    <style name="IndentDatailsPageProductName">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- 订单页标题的文字style-->
    <style name="IndentDatailsPageProductInformation">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">13sp</item>
    </style>


    <!-- 订单页钱的上下距离-->
    <style name="IndentDatailsPageMoneyMargin">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- 订单页钱的 style-->
    <style name="IndentDatailsPageMoneyStyle">
        <item name="android:textColor">#ff5aab</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- 订单页下单按钮的 style-->
    <style name="IndentDatailsPageOrderBottom">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">25dp</item>

    </style>


</resources>